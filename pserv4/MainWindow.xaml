<Window x:Class="pserv4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="599" Width="1186" Loaded="Window_Loaded">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="400*"/>
            </Grid.ColumnDefinitions>
            <Button Name="ButtonServices" Grid.Column="0" BorderThickness="0" Margin="0" FontFamily="Segoe UI" FontSize="17" FontWeight="Light" Background="LightGray" Click="SwitchToServices">
                <TextBlock TextWrapping="Wrap" TextAlignment="Left">Services</TextBlock>
            </Button>
            <Button Name="ButtonDevices" Grid.Column="1" BorderThickness="0" Margin="0"  FontFamily="Segoe UI" FontSize="17" FontWeight="Light" Background="LightGray" Click="SwitchToDevices" >
                <TextBlock TextWrapping="Wrap" TextAlignment="Left">Devices</TextBlock>
            </Button>
            <Button Name="ButtonWindows" Grid.Column="2" BorderThickness="0" Margin="0" FontFamily="Segoe UI" FontSize="17" FontWeight="Light" Background="LightGray" Click="SwitchToWindows">
                <TextBlock TextWrapping="Wrap" TextAlignment="Left">Windows</TextBlock>
            </Button>
            <Button Name="ButtonUninstaller" Grid.Column="3" BorderThickness="0" Margin="0" FontFamily="Segoe UI" FontSize="17" FontWeight="Light" Background="LightGray" Click="SwitchToUninstaller">
                <TextBlock TextWrapping="Wrap" TextAlignment="Left">Uninstall</TextBlock>
            </Button>
            <Button Name="ButtonProcesses" Grid.Column="4" BorderThickness="0" Margin="0" FontFamily="Segoe UI" FontSize="17" FontWeight="Light" Background="LightGray" Click="SwitchToProcesses">
                <TextBlock TextWrapping="Wrap" TextAlignment="Left">Processes</TextBlock>
            </Button>
            <Button Name="ButtonModules" Grid.Column="5" BorderThickness="0" Margin="0" FontFamily="Segoe UI" FontSize="17" FontWeight="Light" Background="LightGray" Click="SwitchToModules">
                <TextBlock TextWrapping="Wrap" TextAlignment="Left">Modules</TextBlock>
            </Button>
            <Grid Grid.Column="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="87*"/>
                    <ColumnDefinition Width="436*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="1" Grid.Column="0" Content="Suchtext:"/>
                <TextBox x:Name="FindThisText" Grid.Row="1" Grid.Column="1" Margin="3"/>
            </Grid>
        </Grid>
        <ListView Grid.Row="1" Name="MainListView" >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="FontFamily" Value="Segoe UI" />
                    <Setter Property="FontSize" Value="13" />
                    
                    
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsRunning}" Value="True">
                            <Setter Property="Foreground" Value="MediumBlue" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=IsDisabled}" Value="True">
                            <Setter Property="Foreground" Value="Gray" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView x:Name="MainGridView">
                   

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
